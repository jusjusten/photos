<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- tentative -->
<dependency>
    <groupId>org.openjfx</groupId>
    <artifactId>javafx-controls</artifactId>
    <version>21.0.2</version>
</dependency>
<dependency>
    <groupId>org.openjfx</groupId>
    <artifactId>javafx-fxml</artifactId>
    <version>21.0.2</version>
</dependency>
<!--  -->

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos.view.UserDashboardViewController">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <Label fx:id="welcomeLabel" text="User Dashboard">
            <font>
               <Font name="System Bold" size="20.0" />
            </font>
         </Label>
         <HBox spacing="10.0" alignment="CENTER_LEFT">
            <TextField fx:id="albumNameField" promptText="Enter album name" />
            <Button fx:id="createAlbumButton" mnemonicParsing="false" onAction="#handleCreateAlbum" text="Create Album" />
            <Button fx:id="deleteAlbumButton" mnemonicParsing="false" onAction="#handleDeleteAlbum" text="Delete Album" />
            <Button fx:id="renameAlbumButton" mnemonicParsing="false" onAction="#handleRenameAlbum" text="Rename Album" />
            <Button fx:id="openAlbumButton" mnemonicParsing="false" onAction="#handleOpenAlbum" text="Open Album" />
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" text="Search" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
         </HBox>
      </VBox>
   </top>
   <center>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <Label text="Albums:" />
         <ListView fx:id="albumsListView" VBox.vgrow="ALWAYS" />
      </VBox>
   </center>
</BorderPane>